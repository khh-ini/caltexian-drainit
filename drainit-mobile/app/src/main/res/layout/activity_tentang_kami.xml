<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16">

                <TextView
                    android:id="@+id/drain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:fontFamily="@font/poppins_bold"
                    android:text="DRAIN"
                    android:textColor="@color/primary"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_toRightOf="@id/drain"
                    android:fontFamily="@font/poppins_bold"
                    android:text="IT"
                    android:textColor="@color/black"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/drain"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Apa itu DRAINIT?"
                    android:textColor="@color/textGrey" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_16"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="1dp"
                android:text="@string/tentang_kami"
                android:textColor="@color/textGrey"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/logo_pcr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:src="@drawable/logo_pcr"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="1dp"
                android:text="@string/tentang_kami_2"
                android:textColor="@color/textGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo_pcr" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>