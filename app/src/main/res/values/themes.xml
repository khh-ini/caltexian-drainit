<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextView.Bold" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextView.Regular" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/bg_edittext_rounded</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:paddingTop">@dimen/dimen2x</item>
        <item name="android:paddingBottom">@dimen/dimen2x</item>
        <item name="android:paddingLeft">@dimen/dimen5x</item>
        <item name="android:paddingRight">@dimen/dimen5x</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>